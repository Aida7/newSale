<Window x:Class="Sale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sale"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="grdTable" HorizontalAlignment="Left" Height="231" Margin="34,99,0,0" VerticalAlignment="Top" Width="719" ForceCursor="True" IsSynchronizedWithCurrentItem="True"/>
        <ComboBox  Name="comboBox" HorizontalAlignment="Left" Height="20" Margin="34,27,0,0" VerticalAlignment="Top" Width="123" SelectionChanged="comboBox_SelectionChanged" >
            <ComboBoxItem>Sales</ComboBoxItem>
            <ComboBoxItem>Shoppers</ComboBoxItem>
            <ComboBoxItem>Sellers</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
